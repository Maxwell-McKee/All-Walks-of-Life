<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:columnCount="3"
    android:padding="10dp"
    android:paddingLeft="10dp"
    tools:context="com.example.allwalksoflife.UserInfoActivity">

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="0"
        android:layout_rowSpan="3"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Age: 20"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/activityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Runner"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/fastestRunTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:paddingTop="10dp"
        android:text="Fastest Run"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/fastestTimeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:text="Time:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fastestDistanceLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:text="Distance: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fastestAvgSpeedLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:text="Average Speed:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fastestRunTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:paddingTop="10dp"
        android:text="0:00:00" />

    <TextView
        android:id="@+id/fastestRunDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:paddingTop="10dp"
        android:text="0 miles" />

    <TextView
        android:id="@+id/fastestAvgSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:paddingTop="10dp"
        android:text="0 mph" />


    <TextView
        android:id="@+id/farthestRunTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:paddingTop="10dp"
        android:text="Farthest Run"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/farthestTimeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="7"
        android:text="Time:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/farthestDistanceLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="7"
        android:text="Distance: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/farthestAvgSpeedLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="7"
        android:text="Average Speed:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/farthestRunTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_row="8"
        android:gravity="top"
        android:paddingTop="10dp"
        android:text="0:00:00" />

    <TextView
        android:id="@+id/farthestRunDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_row="8"
        android:gravity="top"
        android:paddingTop="10dp"
        android:text="0 miles" />

    <TextView
        android:id="@+id/farthestAvgSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_row="8"
        android:gravity="top"
        android:paddingTop="10dp"
        android:text="0 mph" />

</GridLayout>
